    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newimg"
    tools:context=".fp">

    <TextSwitcher
        android:id="@+id/textSwitcher"
        android:layout_width="278dp"
